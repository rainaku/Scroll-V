<Window x:Class="SmoothScroll.RunningAppsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Running Apps"
        Height="450" Width="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">

    <Border CornerRadius="16" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a1a2e" Offset="0"/>
                <GradientStop Color="#16213e" Offset="0.5"/>
                <GradientStop Color="#0f0f23" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Glass overlay -->
            <Border CornerRadius="16" Opacity="0.03">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="0.5"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <DockPanel>
                <!-- Header -->
                <Border DockPanel.Dock="Top" Padding="20,16" Background="Transparent"
                        MouseLeftButtonDown="Header_MouseLeftButtonDown" Cursor="Hand">
                    <Grid>
                        <TextBlock Text="Running Apps" FontSize="15" FontWeight="SemiBold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <Button Content="âœ•" HorizontalAlignment="Right"
                                Width="28" Height="28" FontSize="11"
                                Background="Transparent" Foreground="#808080"
                                BorderThickness="0" Cursor="Hand"
                                Click="CloseButton_Click"/>
                    </Grid>
                </Border>

                <!-- Search -->
                <Border DockPanel.Dock="Top" Margin="20,0,20,12">
                    <Border Background="#15FFFFFF" CornerRadius="10" Padding="12,10">
                        <Grid>
                            <TextBlock Text="ðŸ”" FontSize="13" Foreground="#606060" 
                                       VerticalAlignment="Center" Margin="0,0,0,0"/>
                            <TextBox x:Name="SearchBox" Background="Transparent" 
                                     BorderThickness="0" Foreground="White" FontSize="13"
                                     Margin="24,0,0,0" VerticalAlignment="Center"
                                     TextChanged="SearchBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="CaretBrush" Value="White"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock x:Name="SearchPlaceholder" Text="Search apps..." 
                                       FontSize="13" Foreground="#505050" 
                                       Margin="24,0,0,0" VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>
                        </Grid>
                    </Border>
                </Border>

                <!-- Hint -->
                <TextBlock DockPanel.Dock="Top" Text="Toggle to exclude apps from smooth scrolling" 
                           FontSize="11" Foreground="#606060" Margin="20,0,20,12"/>

                <!-- Apps List -->
                <ScrollViewer Margin="20,0,20,20" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="AppsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#12FFFFFF" CornerRadius="10" 
                                        Margin="0,0,0,8" Padding="14,12">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="ðŸ“¦" FontSize="14" Margin="0,0,10,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding ProcessName}" FontSize="13" 
                                                           Foreground="White" FontWeight="Medium"/>
                                                <TextBlock Text="{Binding WindowTitle}" FontSize="10" 
                                                           Foreground="#606060" MaxWidth="180"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <CheckBox IsChecked="{Binding IsExcluded}" 
                                                  HorizontalAlignment="Right" VerticalAlignment="Center"
                                                  Style="{StaticResource GlassToggle}"
                                                  Checked="AppToggle_Changed" Unchecked="AppToggle_Changed"
                                                  Tag="{Binding ProcessName}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Grid>
    </Border>
</Window>
